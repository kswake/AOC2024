import os


with open (os.path.join(os.path.dirname(os.path.abspath(__file__)),"trailmap.txt"),'r') as input:
    trailmap = []
    for item in input: trailmap.append(list(item.strip()))

def trace_next(x,y,searchInt):
    for coordOffset in [[-1,0],[0,1],[1,0],[0,-1]]:
        
        print(int(x) + int(coordOffset[0]))
        print(int(y) + int(coordOffset[1]))

for row in range(len(trailmap)):
    for col in range(len(trailmap[row])):
        trace_next(row,col,0)
